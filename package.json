{
  "name": "openworld-express",
  "version": "1.0.0",
  "description": "Openworld Express.js API",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && ENV_FILE=./config/.env.prod node ./build/app.js",
    "build": "tsc",
    "dev": "ENV_FILE=./config/.env.dev ts-node ./src/app.ts",
    "dev:reseed": "npm run seed:dev && npm run dev",
    "test": "npm run test:unit",
    "test:unit": "npm run schema:drop:test && npm run seed:test && ENV_FILE=./config/.env.test jest --coverage",
    "test:verbose": "npm run seed:test && ENV_FILE=./config/.env.test jest --verbose --coverage",
    "seed:test": "ENV_FILE=./config/.env.test ts-node ./src/utils/seedTestData.ts",
    "seed:dev": "npm run schema:drop:dev && ENV_FILE=./config/.env.dev ts-node ./src/utils/seedDevelopmentData.ts",
    "schema:drop:test": "ts-node ./node_modules/typeorm/cli.js schema:drop -c test",
    "schema:sync:test": "ts-node ./node_modules/typeorm/cli.js schema:sync -c test",
    "schema:drop:dev": "ts-node ./node_modules/typeorm/cli.js schema:drop -c dev",
    "schema:sync:dev": "ts-node ./node_modules/typeorm/cli.js schema:sync -c dev"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/dotenv-parse-variables": "^0.2.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/socket.io": "^2.1.13",
    "@types/validator": "^13.7.0",
    "@types/yamljs": "^0.2.31",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.12.2",
    "connect": "^3.7.0",
    "dotenv-extended": "^2.9.0",
    "dotenv-parse-variables": "^1.0.1",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.13.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.6",
    "mysql": "^2.14.1",
    "reflect-metadata": "^0.1.10",
    "socket.io": "^3.1.2",
    "swagger-routes-express": "^3.3.1",
    "tsconfig-paths": "^3.11.0",
    "typeorm": "0.2.29",
    "validator": "^13.7.0",
    "winston": "^3.3.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/faker": "^5.5.9",
    "@types/jest": "^26.0.24",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.17.33",
    "@types/supertest": "^2.0.11",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "sqlite3": "^5.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^26.5.6",
    "ts-node": "3.3.0",
    "typescript": "^4.4.4"
  }
}
