{
  "name": "openworld-api",
  "version": "0.0.1",
  "description": "Backend API for Openworld",
  "author": "Eric Heimerman",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "overrides": {
    "js-yaml": "4.1.1"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=dev NODE_OPTIONS=\"-r ts-node/register -r tsconfig-paths/register\" nest start",
    "start:dev": "npm run start -- --watch",
    "start:dev:reseed": "npm run reseed:dev && npm run start:dev",
    "start:debug": "npm run start -- --debug --watch",
    "start:prod": "cross-env NODE_ENV=prod node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "npm run test -- --watch --maxWorkers=1",
    "test:cov": "npm run test -- --coverage",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./test/jest-e2e.json --maxWorkers=1",
    "test:e2e:reseed": "npm run reseed:test && cross-env NODE_ENV=test jest --config ./test/jest-e2e.json --maxWorkers=1",
    "test:integration:reseed": "npm run reseed:test && cross-env NODE_ENV=test jest --rootDir=test/integration --testRegex='.*\\.spec\\.ts$'",
    "test:integration": "cross-env NODE_ENV=test jest --rootDir=test/integration --testRegex='.*\\.spec\\.ts$'",
    "test:api:reseed": "npm run reseed:test && cross-env NODE_ENV=test jest --rootDir=test/api --testRegex='.*\\.spec\\.ts$'",
    "test:api": "cross-env NODE_ENV=test jest --rootDir=test/api --testRegex='.*\\.spec\\.ts$'",
    "**** DATA ****": "",
    "typeorm": "cross-env TYPEORM_CLI=1 typeorm-ts-node-esm -d ormDataSource.ts",
    "typeorm-no-d": "cross-env TYPEORM_CLI=1 typeorm-ts-node-esm",
    "migration:run": "npm run typeorm -- migration:run",
    "schema:drop": "npm run typeorm -- schema:drop",
    "reseed:dev": "cross-env NODE_ENV=dev npm run schema:drop && cross-env NODE_ENV=dev npm run typeorm -- schema:sync && cross-env NODE_ENV=dev npm run migration:run",
    "reseed:test": "cross-env NODE_ENV=test npm run schema:drop && cross-env NODE_ENV=test npm run typeorm -- schema:sync && cross-env NODE_ENV=test npm run migration:run",
    "**** DATA MAINTENANCE ****": "",
    "migration:generate": "cross-env NODE_ENV=dev npm run build && npm run typeorm -- 'migration:generate'",
    "migration:create": "cross-env NODE_ENV=dev npm run typeorm-no-d -- 'migration:create'"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/swagger": "^11.2.2",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cross-env": "^10.1.0",
    "dotenv-extended": "^2.9.0",
    "dotenv-parse-variables": "^2.0.0",
    "mysql2": "^3.15.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.1.0",
    "rxjs": "^7.8.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@types/express": "^5.0.5",
    "@types/jest": "30.0.0",
    "@types/node": "^24.10.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-mock": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.9.3"
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "swc": false,
    "preferTsExts": true
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
